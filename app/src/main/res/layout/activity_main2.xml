<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/soloImagen"
        android:layout_width="match_parent"
        android:layout_height="362dp"
        app:srcCompat="@drawable/times_square_new_york"
        tools:ignore="ContentDescription,MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="40dp"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="425dp"
        android:orientation="vertical"
        android:paddingVertical="@dimen/material_emphasis_medium"

        android:visibility="visible">

        <TextView
            android:id="@+id/granNombre"
            android:layout_width="match_parent"
            android:layout_height="49dp"

            android:layout_marginHorizontal="20dp"

            android:layout_marginVertical="20dp"
            android:text="nombre"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="91dp"
            tools:layout_editor_absoluteY="40dp" />

        <TextView
            android:id="@+id/granDescripcio"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:gravity="center_vertical"
            android:text="la descripcion"
            android:textAlignment="center"
            tools:ignore="MissingConstraints,RtlCompat"
            tools:layout_editor_absoluteX="91dp"
            tools:layout_editor_absoluteY="71dp" />

        <TextView
            android:id="@+id/granPuntuacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:text="puntuacion:"
            android:textAlignment="center" />

        <Button
            android:id="@+id/botonVuelta"
            android:layout_width="177dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="100dp"
            android:layout_marginVertical="20dp"
            android:text="Volver"
            android:textAlignment="center" />

    </LinearLayout>
</LinearLayout>